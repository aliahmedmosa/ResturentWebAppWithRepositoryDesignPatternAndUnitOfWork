@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}

<div>
    <a asp-action="Add">Add New Record</a>
</div>
<table class="table" id="tblStudent">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
             <th>
                @item.Id
            </th>
            <th>
                @item.Name
            </th>
            <th>

                <a asp-controller="Category" asp-action="GetById" asp-route-id="@item.Id">Details</a>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </th>
        </tr>
        }
    </tbody>
</table>