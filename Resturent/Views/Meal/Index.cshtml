@model IEnumerable<Meal>
@{
    ViewData["Title"] = "Categories";
    Layout = "_Admin";
}

<style>
    .btn-info{
        color:#fff;
    }
    th{
        max-width:300px;
    }
</style>

<div class="pagetitle">
      <h1>Dashboard</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a >Home</a></li>
          <li class="breadcrumb-item active">Meals</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
      <div class="row">

       <div>
    <a asp-action="Add" class="btn btn-success">Add New Meal</a>
</div>
<table class="table" id="tblStudent">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categoryId)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
             <th>
                @item.Id
            </th>
            <th>
                @item.Name
            </th>
            <th>
                <img src="Images/@item.Url" width="50"/>
                
            </th>
            <th>
                @item.Discription
            </th>
            <th>
                @item.Price
            </th>
            <th>
                @item.category.Name
            </th>
            <th>

               <a asp-controller="Meal" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                <a asp-controller="Meal" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </th>
        </tr>
        }
    </tbody>
</table>

    </div>
</section>

